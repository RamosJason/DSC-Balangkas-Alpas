<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserOrderingPage">


    <fragment
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_bold"
        android:text="Return"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="13sp"
        app:cornerRadius="15dp" />

    <LinearLayout

        android:layout_marginTop="200dp"
        android:id="@+id/serviceChoice"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/uielement15"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">


        <Button
            android:textColor="@color/white"
            android:id="@+id/pickupBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="@font/roboto"
            android:onClick="ShowPickupForm"
            android:text="Pickup"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/commuteBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="@font/roboto"
            android:onClick="ShowCommuteForm"
            android:text="Commute"
            android:textAllCaps="false"
            android:textSize="12sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:textColor="@color/white"
            android:id="@+id/deliveryBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:fontFamily="@font/roboto"
            android:onClick="ShowDeliveryForm"
            android:text="Delivery"
            android:textAllCaps="false"
            android:textSize="12sp"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout

        android:id="@+id/Pickup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/serviceChoice"
        android:layout_above="@id/serviceChoice"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        app:ael_orientation="vertical"
        app:ael_duration="600"
        app:ael_expanded="false"
        app:ael_interpolator="bounce">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/uielement6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/autour_one"
                    android:id="@+id/currentlySelectingPickup"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Click On Map: Pickup Location"
                    android:textAlignment="viewStart"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/pickupBackBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/uielement13"
                    android:onClick="HidePickup" />

            </LinearLayout>


            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/pickupLocation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/roboto"
                android:hint="Item Pickup Location"
                android:padding="8sp"
                android:textAlignment="viewStart"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/pickupDestination"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Item Destination"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/pickupItem"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Item(s)"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>


            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/pickupPaymentAmount"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Payment Amount"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/pickupPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Payment Method"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pickupLocationBtn"
                    android:text="Set Pickup Location"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:cornerRadius="15dp">

                </Button>

                <Button
                    android:id="@+id/pickupDestinationBtn"
                    android:text="Set Item Destination"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:cornerRadius="15dp">

                </Button>

                <Button
                    android:id="@+id/pickupOrderBtn"
                    android:text="Send Pickup Booking"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:cornerRadius="15dp">

                </Button>

            </LinearLayout>


        </LinearLayout>


    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
        android:id="@+id/Commute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/serviceChoice"
        android:layout_above="@id/serviceChoice"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        app:ael_orientation="vertical"
        app:ael_duration="600"
        app:ael_expanded="false"
        app:ael_interpolator="bounce">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/uielement6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/autour_one"
                    android:id="@+id/currentlySelectingCommute"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="Click On Map: Current Location"
                    android:textAlignment="viewStart"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:id="@+id/commuteBackBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="0dp"
                    android:background="@drawable/uielement13"
                    android:onClick="HideCommute" />

            </LinearLayout>


            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/commuteDestination"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/roboto"
                android:hint="Destination Name"
                android:padding="8sp"
                android:textAlignment="viewStart"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/commuteCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Current Location Name"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>


            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/commutePaymentAmount"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Payment Amount"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/commutePaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Payment Method"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/commuteCurrentLocationBtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:text="Set Current Location"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:cornerRadius="15dp">

                </Button>

                <Button
                    android:id="@+id/commuteDestinationBtn"
                    android:text="Set Destination"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:cornerRadius="15dp">

                </Button>

                <Button
                    android:id="@+id/commuteOrderBtn"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:text="Send Commute Booking"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:cornerRadius="15dp">

                </Button>

            </LinearLayout>


        </LinearLayout>
    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

    <com.github.aakira.expandablelayout.ExpandableRelativeLayout

        android:id="@+id/Delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/serviceChoice"
        android:layout_above="@id/serviceChoice"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        app:ael_orientation="vertical"
        app:ael_duration="600"
        app:ael_expanded="false"
        app:ael_interpolator="bounce">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/uielement6"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/currentlySelectingDelivery"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/autour_one"
                    android:text="Click On Map: Establishment Location"
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/deliveryBackBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/uielement13"
                    android:onClick="HideDelivery" />

            </LinearLayout>


            <EditText
                android:id="@+id/deliveryLocation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/textinputbox"
                android:fontFamily="@font/roboto"
                android:hint="Establishment"
                android:padding="8sp"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/deliveryDestination"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Delivery Destination"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/deliveryOrder"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Item(s)"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>


            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/deliveryPaymentAmount"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Payment Amount"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>

            <EditText
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:background="@drawable/textinputbox"
                android:id="@+id/deliveryPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:hint="Payment Method"
                android:padding="8sp"
                android:textSize="12sp">

            </EditText>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/deliveryEstablishmentBtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:text="Set Delivery Establishment"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    app:cornerRadius="15dp">

                </Button>

                <Button
                    android:id="@+id/deliveryDestinationBtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:text="Set Delivery Destination"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:cornerRadius="15dp">

                </Button>

                <Button
                    android:id="@+id/deliveryOrderBtn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="28dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:fontFamily="@font/roboto"
                    android:maxLines="2"
                    android:text="Send Pickup Booking"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:cornerRadius="15dp">

                </Button>

            </LinearLayout>




        </LinearLayout>


    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>


















</RelativeLayout>